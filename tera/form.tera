              <div class="uploadpic pc"><img src="/static/pics/pic.png"></div>
              <div class="yup">
                <label for="{% if WHICH == 1 %}OV{% elif WHICH == 2 %}TP{% elif WHICH == 3 %}chs{{task.id}}{% else %}{% endif %}"><small class="upup but pc op4">Upload</small></label><br>
                <small class="link but pc op4">Link</small>
