<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Lykrysh</title>
    <link rel="icon" type="image/png" href="/static/img/icon.png" />
    <link rel="stylesheet" href="/static/css/common.css">
    <link rel="stylesheet" href="/static/css/board.css">
    <script type="text/javascript" defer src="/static/js/j.js"></script>
    <script type="text/javascript" defer src="/static/js/board.js"></script>
</head>
<body>

  <div class="logo pc n" id="logo">
    <img src="/static/img/logo.png">
    <small>Lykrysh</small>
  </div>
  <div id="dark"></div>

  <div id="dummy"><small id="bugbug">
  {% if msg %}{{msg.1}}{% endif %}
  </small></div>

  <div class="b1">
    <div class="tbox n">
      <small>Process Notes<br>or Just Chats</small>
    </div>

    <div id="newchunk">
      <form class="topform" action="/todo" method="post">
      <div class="bbox n">
        <div class="short l"><img src="/static/img/crossshort3.png"></div>
        <div class="short r rgttp"><img src="/static/img/crossshort3.png"></div>
      </div>
      <div class="tbox me">
        <p>
          <textarea autofocus rows="3" autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" data-gramm="false" name="description" id="description" value="" class="description">
          </textarea>
        </p>
      </div>
      <div class="bbox n">
          <div class="last l lftbm"><img src="/static/img/crossshort3.png"></div>
          <div class="last r"><img src="/static/img/crossshort3.png"></div>
      </div>

      <div class="tbox post">
          <div class="footer n">
              <div class="leftbut">
                  <div class="uploadpic pc"><img src="/static/img/pic.png"></div>
              </div>
              <div class="rightbut">
                  <img src="/static/img/id.png">
                  <small><input autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" data-gramm="false" type="text" size=8 maxlength=24 {% if welcomeback %} value="{{welcomeback}}" {% else %} value="" placeholder="any*****" {% endif %} name="whosent" id="whosent" /></small>
                  <img src="/static/img/key-icon.png">
                  <small><input autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" data-gramm="false" type="text" size=8 maxlength=24 placeholder="make*one" name="secret" id="secret" value="" /></small>
              </div>
              <button type="submit" class="comment noout pc">
                  <img src="/static/img/send.png">
              </button>
          </div>
      </div>
    </form>
    </div>

    <div id="notes">
        <ul>
          {% for task in tasks %}
            <li>
                <div class="tbox one">
                  {% if not task.editable %}
                  <p>{{ task.description }}</p>  
                  <p>{{ task.posted | truncate(length=10, end="") }}</p> 
                  <p>by {{ task.whosent }}</p> 
                  <div class="footer n">
                    <small class="but pc edit op4">Edit</small>
                    <small class="but pc delete op4">Delete</small>
                    <small class="but pc reply op8">Reply</small>
                    <div class="room bbk">
                      <form action="/todo/{{task.id}}" method="post">
                        <input type="hidden" name="_method" value="" />
                        <img src="/static/img/key-icon.png">
                        <small><input autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" data-gramm="false" type="password" size=8 maxlength=24 placeholder="****" name="password" id="password" value="" /></small>
                      </form>
                    </div>
                    <span class="count">n</span>
                  </div>
                  {% endif %}
                </div>

                {% if task.editable %}
                <div>
                  <form class="editform" action="/todo/{{task.id}}/edit" method="post">
                  <div class="bbox n top12">
                    <div class="short l"><img src="/static/img/crossshort3.png"></div>
                    <div class="short r rgttp"><img src="/static/img/crossshort3.png"></div>
                  </div>
                  <div class="tbox me bbk">
                    <p>
                      <textarea rows="3" autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" data-gramm="false" name="description" id="description"  class="description">{{ task.description }}
                      </textarea>
                    </p>
                  </div>
                  <div class="bbox n">
                    <div class="last l lftbm"><img src="/static/img/crossshort3.png"></div>
                    <div class="last r"><img src="/static/img/crossshort3.png"></div>
                  </div>
                  <div class="tbox top12">
                    <div class="footer n" id="editable">
                      <div class="leftbut">
                        <div class="uploadpic pc"><img src="/static/img/pic.png"></div>
                      </div>
                      <button type="reset" class="cancel noout pc"><small>Cancel Editing</small></button>
                      <button type="submit" class="comment noout pc"><img src="/static/img/send.png"></button>
                    </div>
                  </div>
                  </form>
                </div>
                {% else %}

                <div class="together">
                  <form class="replyform" action="/todo" method="post">
                  <div class="bbox n top12">
                    <div class="cross l"><img src="/static/img/cross3.png"></div>
                    <div class="short r rgttp"><img src="/static/img/crossshort3.png"></div>
                  </div>
                  <div class="tbox me">
                    <p>
                    <textarea autofocus rows="3" autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" data-gramm="false" name="description" id="description" value="" class="description">
                    </textarea>
                    </p>
                  </div>
                  <div class="bbox n">
                    <div class="last l lftbm"><img src="/static/img/crossshort3.png"></div>
                    <div class="last r"><img src="/static/img/crossshort3.png"></div>
                  </div>
                  <div class="tbox top12">
                    <div class="footer n">
                      <div class="leftbut">
                        <div class="uploadpic pc"><img src="/static/img/pic.png"></div>
                      </div>
                      <div class="rightbut">
                        <img src="/static/img/id.png">
                        <small><input autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" data-gramm="false" type="text" size=8 maxlength=24 {% if welcomeback %} value="{{welcomeback}}" {% else %} value="" placeholder="any*****" {% endif %} name="whosent" id="whosent" /></small>
                        <img src="/static/img/key-icon.png">
                        <small><input autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" data-gramm="false" type="text" size=8 maxlength=24 placeholder="make*one" name="secret" id="secret" value="" /></small>    
                      </div>
                      <button type="submit" class="comment noout pc"><img src="/static/img/send.png"></button>
                    </div>
                  </div>
                  </form>
                </div>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      </div>
  </div>
</body>
</html>